# RAG Eval Engine Configuration
# Copy this to .env and modify as needed

# Qdrant Vector Database
RAG_QDRANT_URL=http://localhost:6333

# Embedding Model
# Options: all-MiniLM-L6-v2, BAAI/bge-base-en-v1.5, text-embedding-3-small
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Chunking defaults
RAG_CHUNKING_STRATEGY=recursive
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50

# LLM Configuration
RAG_OLLAMA_URL=http://localhost:11434
RAG_DEFAULT_MODEL=qwen2.5-coder:14b

# Optional: OpenAI API key for cloud embeddings/LLM
# RAG_OPENAI_API_KEY=sk-...

# Retrieval
RAG_DEFAULT_TOP_K=5
RAG_HYBRID_ALPHA=0.7

# Evaluation
RAG_EVAL_ON_QUERY=true
RAG_EVAL_LIGHTWEIGHT=true

# Upload limits
RAG_MAX_FILE_SIZE_MB=50
RAG_MAX_FILES_PER_UPLOAD=20

# Database
RAG_DB_PATH=data/rag_eval.db
